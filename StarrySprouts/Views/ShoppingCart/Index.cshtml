@model ShoppingCartViewModel

<h2>Shopping Cart</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Selected Amount</th>
            <th>Items</th>
            <th class="text-right">Price: </th>
            <th class="text-right">Subtotal: </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-center">@item.Amount</td>
                <td class="text-start">@item.Product.Name</td>
                <td class="text-end">@item.Product.Price.ToString("C")</td>
                <td class="text-end">
                    @((item.Amount * item.Product.Price).ToString("C"))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-end"> Total: </td>
            <td class="text-end"> @Model.ShoppingCartTotal.ToString("C") </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Checkout</a>
</div>