@model ProductModel

<h1 class="text-center py-4">@Model.Name</h1>

<div class="thumbnail text-center">
        <img alt="@Model.Name" src="@Model.ImageUrl" class="product-image"/>
    <div class="caption">
        <h3>Price: @Model.Price.ToString("C")</h3>
        <h3><a href="#">@Model.Name</a></h3>
        <p>@Model.Description</p>
    </div>
    <div class="add-to-cart">
        <p class="button py-5">
            <a class="btn btn-primary"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-productId="@Model.ProductId">
                Add to Cart
            </a>
        </p>
    </div>
</div>