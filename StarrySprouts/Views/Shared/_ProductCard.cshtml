@model ProductModel

<div class="col-md-4">
    <div class="card shadow mb-4">
        <img src="@Model.ImageThumbnailUrl" alt="Image of the product" class="card-img-top">
        <div class="card-body">
            <h3> CA @Model.Price.ToString("C")</h3>
            <h3 class="card-title"><a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId">@Model.Name</a></h3>
        </div>
    </div>
</div>
